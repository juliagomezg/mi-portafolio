      const themeToggle = document.getElementById("theme-toggle");

      // Verifica si hay un tema guardado en localStorage
      const savedTheme = localStorage.getItem("theme");

      if (savedTheme) {
        html.classList.toggle("dark", savedTheme === "dark");
