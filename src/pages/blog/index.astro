---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout title="Blog | Mi Portafolio" lang="es">
  <main class="container mx-auto p-10 text-center">
    <h1 class="text-4xl font-bold mb-6">Blog</h1>
    <ul>
      {posts.map((post) => (
        <li key={post.slug} class="mb-4">
          <a href={`/blog/${post.slug}`} class="text-blue-400 hover:underline text-xl">
            {post.data.title}
          </a>
        </li>
      ))}
    </ul>
  </main>
</Layout>
